<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchesFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hidden_message"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="@string/you_have_no_current_matches"
        android:textSize="32dp"
        android:textStyle="bold"
        android:visibility="invisible"
        />

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_table">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Messages"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/com_facebook_blue"
            />



    </android.support.v7.widget.Toolbar>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/message_table_fragment"

        android:layout_below="@+id/toolbar_table"
        >
    </ListView>

</RelativeLayout>