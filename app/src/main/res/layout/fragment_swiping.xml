<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:alpha="1"
    android:background="@drawable/background5"
    android:minHeight="155dp"
    tools:context=".SwipingFragment">


    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="291dp"
        android:layout_height="112dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_name"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/app_logo_text" />

    <ImageView
        android:id="@+id/userImageView"
        android:layout_width="282dp"
        android:layout_height="293dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logoImageView"
        android:layout_marginTop="5dp"
        android:background="@color/transparentColor"
        android:src="@drawable/default_user"
        android:tint="@color/authui_colorPrimary" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="436dp"
        android:layout_height="60dp"
        android:layout_below="@+id/userImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:alpha="1"
        android:background="@android:color/white"
        android:paddingLeft="8dp"
        android:text="Name"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="436dp"
        android:layout_height="170dp"
        android:layout_below="@+id/userName"
        android:layout_centerHorizontal="true"

        android:background="@android:drawable/screen_background_light_transparent"
        android:paddingLeft="8dp"

        android:text="Description"
        android:textSize="20sp"/>


    <ImageButton
        android:id="@+id/swipeRight"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_alignParentEnd="true"
        android:layout_below="@+id/description"
        android:layout_marginTop="63dp"

        android:layout_marginEnd="85dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/heart_icon"
        android:tint="#63de9b"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="459dp" />

    <ImageButton
        android:id="@+id/nopeButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="85dp"
        android:layout_below="@+id/description"
        android:layout_marginTop="63dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/nope_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="87dp" />




</RelativeLayout>