<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterValues2">

    <RelativeLayout
        android:id="@+id/registerValuesBackdrop"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <com.jgabrielfreitas.core.BlurImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".7"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/background2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <LinearLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <EditText
            android:id="@+id/firstName"
            android:layout_width="407dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="282dp"
            android:alpha=".7"
            android:background="@drawable/rounded"
            android:ems="10"
            android:hint="First Name"
            android:inputType="textEmailAddress"
            android:padding="20dp"
            android:textAlignment="viewStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />


        <EditText
            android:id="@+id/lastName"
            android:layout_width="407dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:alpha=".7"
            android:background="@drawable/rounded"
            android:ems="10"
            android:focusable="auto"
            android:hint="Last Name"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            android:padding="20dp"
            android:textAlignment="viewStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:id="@+id/birthDate"
            android:layout_width="407dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="287dp"
            android:alpha=".65"
            android:background="@drawable/rounded"
            android:ems="10"
            android:padding="20dp"
            android:text="Birth Date"
            android:focusable="false"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />


        <Button
            android:id="@+id/signUpButton"
            android:layout_width="407dp"
            android:layout_height="48dp"

            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="95dp"
            android:alpha=".7"
            android:background="@drawable/clear_button"
            android:onClick="registerUser"
            android:shadowColor="@color/cardview_dark_background"
            android:text="Sign Up"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:typeface="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/createPasswordTextField" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="350dp"
            android:layout_height="119dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="131dp"
            android:contentDescription="@string/app_name"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/app_logo_text" />

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="28dp"
            android:background="@android:color/transparent"
            android:onClick="goBack"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/white_button" />

        <ToggleButton
            android:id="@+id/femaleToggle"
            android:layout_width="167dp"
            android:layout_height="61dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/maleToggle"
            android:layout_marginEnd="77dp"
            android:checked="false"
            android:text="ToggleButton"
            android:textOff="Female"
            android:textOn="Female" />

        <ToggleButton
            android:id="@+id/maleToggle"
            android:layout_width="167dp"
            android:layout_height="61dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"

            android:layout_marginBottom="182dp"
            android:layout_marginStart="77dp"
            android:checked="false"
            android:text="ToggleButton"
            android:textOff="Male"
            android:textOn="Male" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>