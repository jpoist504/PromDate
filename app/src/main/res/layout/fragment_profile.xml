<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background5"
    tools:context=".ProfileFragment">


        <ImageView
            android:id="@+id/logoImageView2"
            android:layout_width="291dp"
            android:layout_height="112dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"

            android:contentDescription="@string/app_name"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/app_logo_text" />

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="241dp"
            android:layout_height="230dp"
            android:layout_below="@+id/logoImageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/default_user" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="367dp"
            android:layout_below="@+id/profileImageView"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Name"
            android:textAlignment="center"
            android:textSize="30sp" />

        <Button
            android:id="@+id/nameButton"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/settings_button"
            android:paddingLeft="20dp"
            android:layout_below="@+id/nameTextView"
            android:layout_marginTop="45dp"
            android:text="Name: "
            android:textAlignment="viewStart"
            android:textSize="20sp" />

        <Button
            android:id="@+id/locationButton"
            android:layout_width="match_parent"
            android:layout_marginTop="-2dip"
            android:layout_height="78dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nameButton"
            android:background="@drawable/settings_button"
            android:paddingLeft="20dp"
            android:text="Location: "
            android:textAlignment="viewStart"
            android:textSize="20sp" />

        <Button
            android:id="@+id/genderButton"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/locationButton"
            android:layout_marginTop="-2dip"
            android:background="@drawable/settings_button"
            android:paddingLeft="20dp"
            android:textSize="20sp"
            android:text="Gender:"
            android:textAlignment="viewStart" />



        <Button
            android:id="@+id/signOut"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/genderButton"
            android:layout_marginTop="90dp"
            android:background="#18000000"
            android:text="SignOut"
            android:textColor="@android:color/holo_red_light"
            android:paddingLeft="20dp"
            android:textSize="18sp" />


</RelativeLayout>